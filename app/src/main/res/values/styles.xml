<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:backgroundTint">@color/background</item>-->
        <item name="android:textSize">@dimen/info_text_size</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <!-- Base application theme for empty fragment. -->
    <style name="AppTheme.StartDark">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textSize">@dimen/info_text_size</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/actionBarColor</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/info_text_size</item>
    </style>

    <style name="AppTheme.StartDark.TextCaption">
        <item name="android:textSize">@dimen/captions_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.EditTextInput">
        <item name="android:textSize">@dimen/inputs_text_size</item>
        <item name="android:textColor">@color/inputLayoutUnderline</item>
    </style>

    <style name="AppTheme.TextViewClickable">
        <item name="android:textColor">@color/colorActiveElement</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.TextViewInfo">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextViewInfoOwnerDashEmpty">
        <item name="android:textColor">@color/textViewHidden</item>
    </style>


    <style name="AppTheme.Button">
        <item name="android:background">@color/colorButtonBackground</item>
        <item name="android:textColor">@color/colorButtonTextcolor</item>
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:backgroundTint">@color/colorButtonBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- InputTextLayout-->
    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/inputs_text_size</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/inputs_text_size</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textSize">@dimen/inputs_text_size</item>
        <!--<item name="android:textColor">@color/user_input_color</item>-->
        <item name="android:textColorPrimary">@color/inputLayoutUnderline</item>
        <item name="android:textColorHint">@color/inputHint</item>
        <item name="colorControlNormal">@color/inputHint</item>
        <item name="colorControlActivated">@color/inputHint</item>
        <!--<item name="colorControlHighlight">@color/green</item>-->
    </style>

    <style name="TextInputLayoutAddDog" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textSize">@dimen/inputs_text_size</item>
    </style>

    <!--Dog grid menu-->
    <style name="DogGridMenuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/actionBarColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    Search-->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">16sp</item>
        <item name="android:editTextColor">@color/menuItemDisabledTextColor</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
