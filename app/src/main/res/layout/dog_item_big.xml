<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dog_photo_big_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/imagedog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weights_big_iv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_t2t_weights"
        app:layout_constraintBottom_toBottomOf="@id/dog_weight_big_tv"
        app:layout_constraintStart_toEndOf="@+id/dog_weight_big_tv"
        app:layout_constraintTop_toTopOf="@id/dog_weight_big_tv" />

    <TextView
        android:id="@+id/dog_age_big_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/info_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dog_name_big_tv"
        tools:text="11,7 лет" />

    <TextView
        android:id="@+id/dog_weight_big_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/info_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dog_age_big_tv"
        tools:text="28,9 кг" />


    <TextView
        android:id="@+id/dog_name_big_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/captions_text_size"
        app:layout_constraintBottom_toBottomOf="@id/dog_photo_big_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dog_photo_big_iv"
        app:layout_constraintVertical_bias="0.55"
        tools:text="Кукусик" />

    <com.talk2tail.common.ui.CircleImageView
        android:id="@+id/dog_circle_third_big_civ"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:background="@android:color/transparent"
        android:src="@color/dogCircleColorBlue"
        app:layout_constraintStart_toStartOf="@id/dog_circle_second_big_civ"
        app:layout_constraintTop_toTopOf="@id/dog_circle_first_big_civ" />

    <com.talk2tail.common.ui.CircleImageView
        android:id="@+id/dog_circle_second_big_civ"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:background="@android:color/transparent"
        android:src="@color/dogCircleColorPurple"
        app:layout_constraintStart_toStartOf="@id/dog_circle_first_big_civ"
        app:layout_constraintTop_toTopOf="@id/dog_circle_first_big_civ" />

    <com.talk2tail.common.ui.CircleImageView
        android:id="@+id/dog_circle_first_big_civ"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:src="@color/dogCircleColorPink"
        app:layout_constraintBottom_toBottomOf="@id/dog_photo_big_iv"
        app:layout_constraintStart_toStartOf="@id/dog_photo_big_iv"
        app:layout_constraintTop_toTopOf="@id/dog_photo_big_iv"
        app:layout_constraintVertical_bias="0.43" />


</androidx.constraintlayout.widget.ConstraintLayout>