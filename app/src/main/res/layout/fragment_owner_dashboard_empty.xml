<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.StartDark"
    tools:context=".dogdashboard.ui.DogDashboardFragment">

    <ImageView
        android:id="@+id/owner_dash_image_dog_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        android:src="@drawable/ic_t2t_dog"
        app:layout_constraintBottom_toTopOf="@id/guideline_dog_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_dog_top" />

    <ImageView
        android:id="@+id/owner_dash_curve_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_t2t_change_it_curve"
        app:layout_constraintBottom_toTopOf="@id/guideline_curve_bottom"
        app:layout_constraintEnd_toEndOf="@id/guideline_curve_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_curve_left"
        app:layout_constraintTop_toTopOf="@id/guideline_curve_top" />


    <TextView
        android:id="@+id/oops_part_one_tv"
        style="@style/AppTheme.TextViewInfoOwnerDashEmpty"
        android:layout_width="312dp"
        android:layout_height="85dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/oops_text"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/change_it_tv"
        style="@style/AppTheme.TextViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_it"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_curve_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dog_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.405" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dog_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.145" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_curve_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="12dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_curve_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="119dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.455" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_curve_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="38dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_curve_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="90dp" />


</androidx.constraintlayout.widget.ConstraintLayout>